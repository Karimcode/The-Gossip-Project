<div class="container">
  <div class="row">
    <div class="col text-center">
      <h1>Bienvenue sur la page de la ville <%= @city.name %> </h1><br>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-10">
        <p>💁 Voici la liste des potins de <%=@city.name%> :</p>
      </div>
    <% Gossip.all.each do |potin|%>
      <%if potin.city_id == @city.id%>
  
          <div class="col">
            <div class="card mb-3" style="width: 18rem;">
              <div class="card-body">
                <h5 class="card-title"><%= potin.title%></h5>
                <h6 class="card-subtitle mb-2 text-muted">by <%= User.find_by(id: potin.user_id).first_name%> </h6>
                <p class="card-text"><%= potin.content %></p> 
                  <div class="col text-center">
                    <a href="<%= gossip_path(potin.id)%>" class="btn btn-success">Voir plus</a>
                  </div>
              </div>
            </div>
          </div>
        <%end%>
      <%end%>
    </div>
  </div>
</div>
</div>