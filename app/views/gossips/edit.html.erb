<div class="container">
<div class="form-group row">
    <div class="col-10">
    <h2>Modifie ton dernier potin</h2><br>

    <%= form_for @gossip do |f| %>

      <p>Auteur: <%= User.find(@gossip.user_id).first_name%></p><br>
      
      <%= f.label 'Le Titre' %><br>
      <%= f.text_field :title, class: 'form-control' %><br><br />
    
      <%= f.label 'Le Contenu' %><br>
      <%= f.text_area :content, class: 'form-control'  %><br><br />
    
      <%= f.submit "Submit Article", class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>
</div>