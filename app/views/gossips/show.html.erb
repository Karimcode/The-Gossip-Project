<div class="show_gossip">
  <div class="col text-center">
    <h2>Voici le gossip n°<%=@gossip.id%></h2><br>
  </div>

  <div class="card mx-3">
    <div class="card-header">
    <strong><%= @gossip.title.capitalize!%></strong>
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <em>"<%= @gossip.content %></em><p></p>
        <footer class="blockquote-footer">rédigé le <%= @gossip.created_at %>
          <p></p>
          <p>Par : <a href="<%=user_path(@gossip.user_id)%>" class="card-link"><%= User.find(@gossip.user_id).first_name%> <%= User.find(@gossip.user_id).last_name %></a></p>
          <!-- <p>clique <a href="<%=user_path(@gossip.user_id)%>" class="card-link">ici</a> pour en découvrir plus sur <strong><%= User.find(@gossip.user_id).first_name %></strong></p> -->
          <p>Clique <a href="<%=city_path(@gossip.city_id)%>" class="card-link">ici</a> pour voir tout les gossips de <%=City.find(@gossip.city_id).name%>.</p>
          <%if current_user.id == @gossip.user_id%>
            <%puts @gossip%>
              <a href="<%=edit_gossip_path(params[:id])%>" class="class="btn btn-info">Modifier</a>
              <%= form_tag url_for(action: 'destroy'), method: "delete" do%>
                <%= submit_tag "Supprimer", class: 'btn btn-danger'%>
              <%end%>
          <%end%>
        </footer>
      </blockquote>
    </div>
  </div>
</div>